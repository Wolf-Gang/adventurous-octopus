<game>
	<scene  name="overture"/>
	
	<player texture="elderjanko"/>
	
	<tile_size pixels="32"/>
  
  <controls>
    
    <!-- Player uses these but they are multi-purpose -->
    <activate key0="return" alt0="z" press="true"/>
    <up key0="up"/>
    <down key0="down"/>
    <left key0="left"/>
    <right key0="right"/>
    
    <select_up key0="up" press="true"/>
    <select_down key0="down" press="true"/>
    <select_left key0="left" press="true"/>
    <select_right key0="right" press="true"/>
    
    <back key0="rshift" alt0="x" press="true"/>
    
    <menu key0="m" alt0="c" press="true"/>
  </controls>
  
  <!-- 10x8 -->
	<!-- <screen_size x="320" y="256"/> -->
  
  <!-- 12x10 -->
	<screen_size x="384" y="320"/>
	
	<!-- Left to the defaults -->
</game>
